<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/main_fragment">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Входящие вызовы..."
        android:id="@+id/tvInCallInfo"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#FFF17C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SMS-отправка..."
        android:id="@+id/tvSMSSendInfo"
        android:layout_below="@+id/tvInCallInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="6"
        android:layout_alignRight="@+id/tvInCallInfo"
        android:layout_alignEnd="@+id/tvInCallInfo"
        android:background="#9EACFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Набор номеров..."
        android:id="@+id/tvInitCallInfo"
        android:layout_below="@+id/tvSMSSendInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="6"
        android:layout_alignRight="@+id/tvSMSSendInfo"
        android:layout_alignEnd="@+id/tvSMSSendInfo"
        android:background="#00E07B" />

</RelativeLayout>
